{{>layout/header}}

<!-- start navbar -->
<div class="md:fixed md:w-full md:top-0 md:z-20 flex flex-row flex-wrap items-center bg-white p-6 border-b border-gray-300">

    <!-- logo -->
    <div class="flex-none w-56 flex flex-row items-center">
        <img src="/img/logo.png" class="w-10 flex-none">
        <strong class="capitalize ml-1 flex-1"> MyVelog</strong>

        <button id="sliderBtn" class="flex-none text-right text-gray-900 hidden md:block">
            <i class="fad fa-list-ul"></i>
        </button>
    </div>
    <!-- end logo -->

    <!-- navbar content toggle -->
    <button id="navbarToggle" class="hidden md:block md:fixed right-0 mr-6">
        <i class="fad fa-chevron-double-down"></i>
    </button>
    <!-- end navbar content toggle -->

    <!-- navbar content -->
    <div id="navbar" class="animated md:hidden md:fixed md:top-0 md:w-full md:left-0 md:mt-16 md:border-t md:border-b md:border-gray-200 md:p-10 md:bg-white flex-1 pl-3 flex flex-row flex-wrap justify-end items-center md:flex-col md:items-center">
        <!-- user -->
        <div class="dropdown relative md:static">

            <button class="menu-btn focus:outline-none focus:shadow-outline flex flex-wrap items-center">
                <div class="w-8 h-8 overflow-hidden rounded-full">
                    <img class="w-full h-full object-cover" src="{{user.thumbnail}}" >
                </div>

                <div class="ml-2 capitalize flex ">
                    <h1 class="text-sm text-gray-800 font-semibold m-0 p-0 leading-none">{{user.username}}</h1>
                    <i class="fad fa-chevron-down ml-2 text-xs leading-none"></i>
                </div>
            </button>

            <button class="hidden fixed top-0 left-0 z-10 w-full h-full menu-overflow"></button>

            <div class="text-gray-500 menu hidden md:mt-10 md:w-full rounded bg-white shadow-md absolute z-20 right-0 w-40 mt-5 py-2 animated faster">
                <hr>

                <!-- item -->
                <a class="px-4 py-2 block capitalize font-medium text-sm tracking-wide bg-white hover:bg-gray-200 hover:text-gray-900 transition-all duration-300 ease-in-out" href="/logout/{{user.username}}">
                    <i class="fad fa-user-times text-xs mr-1"></i>
                    log out
                </a>
                <!-- end item -->

            </div>
        </div>
        <!-- end user -->
    </div>
    <!-- end navbar content -->

</div>
<!-- end navbar -->


<!-- strat wrapper -->
<div class="h-screen flex flex-row flex-wrap">

    <!-- start sidebar -->
    <div id="sideBar" class="relative flex flex-col flex-wrap bg-white border-r border-gray-300 p-6 flex-none w-64 md:-ml-64 md:fixed md:top-0 md:z-30 md:h-screen md:shadow-xl animated faster">


        <!-- sidebar content -->
        <div class="flex flex-col">

            <!-- sidebar toggle -->
            <div class="text-right hidden md:block mb-4">
                <button id="sideBarHideBtn">
                    <i class="fad fa-times-circle"></i>
                </button>
            </div>
            <!-- end sidebar toggle -->

            <p class="uppercase text-xs text-gray-600 mb-4 tracking-wider">홈</p>

            <!-- link -->
            <a href="/main/{{ user.username }}" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
                <i class="fad fa-chart-pie text-xs mr-2"></i>
                MyVelog Dashboard
            </a>
            <!-- end link -->

            <!-- link -->
            <a href="/post/{{ user.username }}" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
                <i class="fad fa-trophy-alt text-xs mr-2"></i>
                Post Rank
            </a>
            <!-- end link -->

            <!-- link -->
            <a href="/day/{{ user.username }}" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
                <i class="fa fa-calendar text-xs mr-2"></i>
                Visits By Day
            </a>
            <!-- end link -->
        </div>
        <!-- end sidebar content -->

    </div>
    <!-- end sidbar -->

    <!-- strat content -->
    <div class="bg-gray-100 flex-1 p-6 md:mt-16">

        <!-- strat Analytics -->
        <div class="mt-6 grid grid-cols-2 gap-6 xl:grid-cols-1">

            <!-- update section -->
            <div class="card bg-teal-400 border-teal-400 shadow-md text-white">
                <div class="card-body flex flex-row">

                    <!-- image -->
                    <div class="img-wrapper w-40 h-40 flex justify-center items-center">
                        <img src="/img/total.png" alt="img title">
                    </div>
                    <!-- end image -->

                    <!-- info -->
                    <div class="py-2 ml-10">
                        <h1 class="h6">내 벨로그 총 조회수</h1>
                        <p class="text-white text-xs">와우! 지금까지 게시글들의 총 조회수가 무려</p>
                        <h1 class="h2">{{stats.totalVisits}}개</h1>
                        <div class="mt-20 mb-2 flex items-center" style="margin-top: 10px">
                            <div class="py-1 px-3 rounded bg-green-200 text-green-900 mr-3" style="background: white;">
                                <i class="fa fa-caret-up"></i>
                            </div>
                            <p class="text-black"><span class="num-2 text-green-400"></span><span class="text-green-400" style="color: white;font-size: x-large;font-weight: 600;">{{visitsUp}}</span></p>
                        </div>
                        <p class="text-white text-xs" style="font-size: small; font-weight: 600;">{{datetime}} 로부터</p>
                    </div>
                    <!-- end info -->

                </div>
            </div>
            <!-- end update section -->

            <!-- carts -->
            <div class="flex flex-col">

                <!-- alert -->
                <div class="alert alert-dark mb-6">
                    내 벨로그 가기
                    <a class="ml-2" target="_blank" href="https://velog.io/@{{user.username}}">@{{user.username}}</a>
                </div>
                <!-- end alert -->

                <!-- charts -->
                <div class="grid grid-cols-2 gap-6 h-full">

                    <div class="card">
                        <div class="py-3 px-4 flex flex-row justify-between" style="margin-top: 10px;">
                            <h1 class="h6">
                                <span class="num-4"></span>{{stats.totalLikes}}
                                <p>총 좋아요</p>
                            </h1>
                            <img src="/img/like.png" alt="img like" style="width: 15%;height: 15%;">
                        </div>
                        <div class="mt-20 mb-2 flex items-center" style="margin-top: 10px; margin-left: 20px;">
                            <div class="py-1 px-3 rounded bg-green-200 text-green-900 mr-3" style="background: #4fd1c578; ">
                                <i class="fa fa-caret-up"></i>
                            </div>
                            <p class="text-black"><span class="num-2 text-green-400"></span><span class="text-green-400" style="color: #718096;font-size: small;font-weight: 600;">{{likesUp}}</span></p>
                        </div>
                        <div class="analytics_1"></div>
                    </div>

                    <div class="card">
                        <div class="py-3 px-4 flex flex-row justify-between" style="margin-top: 10px;">
                            <h1 class="h6">
                                <span class="num-2">{{stats.totalPosts}}</span>
                                <p>총 게시글</p>
                            </h1>
                            <img src="/img/post.png" alt="img post" style="width: 15%;height: 15%;">
                        </div>
                        <div class="mt-20 mb-2 flex items-center" style="margin-top: 10px; margin-left: 20px;">
                            <div class="py-1 px-3 rounded bg-green-200 text-green-900 mr-3" style="background: #4fd1c578;">
                                <i class="fa fa-caret-up"></i>
                            </div>
                            <p class="text-black"><span class="num-2 text-green-400"></span><span class="text-green-400" style="color: #718096;font-size: small;font-weight: 600;">{{postsUp}}</span></p>
                        </div>
                        <div class="analytics_1"></div>
                    </div>

                </div>
                <!-- charts    -->

            </div>
            <!-- end charts -->
        </div>
        <!-- end Analytics -->

        <!-- Start Recent Sales -->
        <div class="card col-span-3 xl:col-span-1" style="margin-top: 20px;">
            <div class="card-header">
                <h1 class="h6">새로운 조회수</h1>
            </div>

            <table class="table-auto w-full text-left">
                <thead>
                <tr>
                    <th class="px-4 py-2 border-r"></th>
                    <th class="px-4 py-2 border-r">게시글</th>
                    <th class="px-4 py-2 border-r">좋아요</th>
                    <th class="px-4 py-2">조회수</th>
                </tr>
                </thead>
                <tbody class="text-gray-600">

                {{ ^new }}
                    <td class="border border-l-0 px-4 py-2 text-center"><i></i></td>
                    <td class="border border-l-0 px-4 py-2">새로운 조회수가 없어요!</td>
                    <td class="border border-l-0 px-4 py-2"><span class="num-2"></span></td>
                    <td class="border border-l-0 border-r-0 px-4 py-2"><span class="num-2"></span></td>
                {{ /new }}
                {{ #new }}
                <tr>
                    <td class="border border-l-0 px-4 py-2 text-center"><i>1</i></td>
                    <td class="border border-l-0 px-4 py-2">{{title}}</td>
                    <td class="border border-l-0 px-4 py-2">
                        {{ #isLikesUp }}
                            <i class="fa fa-caret-up" aria-hidden="true" style="color: #ff0000a8; margin-right: 5px;"></i>
                        {{ /isLikesUp }}

                        {{ ^isLikesUp }}
                            <i class="fa fa-caret-down" aria-hidden="true" style="color: #ff0000a8; margin-right: 5px;"></i>
                        {{ /isLikesUp }}
                        {{likes}}<span class="num-2"></span></td>
                    <td class="border border-l-0 border-r-0 px-4 py-2"><span class="num-2"></span><i class="fa fa-caret-up" aria-hidden="true" style="color: #ff0000a8; margin-right: 5px;"></i>{{visits}}</td>
                </tr>
                {{ /new }}

                </tbody>
            </table>
        </div>
        <!-- End Recent Sales -->

    </div>
    <!-- end content -->

</div>
<!-- end wrapper -->

{{>layout/footer}}
