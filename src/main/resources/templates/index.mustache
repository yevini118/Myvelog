{{>layout/header}}

<!-- start navbar -->
<div class="md:fixed md:w-full md:top-0 md:z-20 flex flex-row flex-wrap items-center bg-white p-6 border-b border-gray-300">

    <!-- logo -->
    <div class="flex-none w-56 flex flex-row items-center">
        <img src="/img/logo.png" class="w-10 flex-none">
        <strong class="capitalize ml-1 flex-1"> MyVelog</strong>

        <button id="sliderBtn" class="flex-none text-right text-gray-900 hidden md:block">
            <i class="fad fa-list-ul"></i>
        </button>
    </div>
    <!-- end logo -->

    <!-- navbar content toggle -->
    <button id="navbarToggle" class="hidden md:block md:fixed right-0 mr-6">
        <i class="fad fa-chevron-double-down"></i>
    </button>
    <!-- end navbar content toggle -->

    <!-- navbar content -->
    <div id="navbar" class="animated md:hidden md:fixed md:top-0 md:w-full md:left-0 md:mt-16 md:border-t md:border-b md:border-gray-200 md:p-10 md:bg-white flex-1 pl-3 flex flex-row flex-wrap justify-end items-center md:flex-col md:items-center">
        <!-- user -->
        <div class="dropdown relative md:static">

            <button class="menu-btn focus:outline-none focus:shadow-outline flex flex-wrap items-center">
                <div class="w-8 h-8 overflow-hidden rounded-full">
                    <img class="w-full h-full object-cover" src="/img/user.png" >
                </div>

                <div class="ml-2 capitalize flex ">
                    <h1 class="text-sm text-gray-800 font-semibold m-0 p-0 leading-none">로그인</h1>
                    <i class="fad fa-chevron-down ml-2 text-xs leading-none"></i>
                </div>
            </button>

        </div>
        <!-- end user -->
    </div>
    <!-- end navbar content -->

</div>
<!-- end navbar -->


<!-- strat wrapper -->
<div class="h-screen flex flex-row flex-wrap">

    <!-- start sidebar -->
    <div id="sideBar" class="relative flex flex-col flex-wrap bg-white border-r border-gray-300 p-6 flex-none w-64 md:-ml-64 md:fixed md:top-0 md:z-30 md:h-screen md:shadow-xl animated faster">

       <!-- sidebar content -->
       <div class="flex flex-col">

           <!-- sidebar toggle -->
           <div class="text-right hidden md:block mb-4">
               <button id="sideBarHideBtn">
                   <i class="fad fa-times-circle"></i>
               </button>
           </div>
           <!-- end sidebar toggle -->

           <p class="uppercase text-xs text-gray-600 mb-4 tracking-wider">홈</p>

           <!-- link -->
           <a href="" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
               <i class="fad fa-chart-pie text-xs mr-2"></i>
               MyVelog Dashboard
           </a>
           <!-- end link -->

           <!-- link -->
           <a href="" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
               <i class="fad fa-trophy-alt text-xs mr-2"></i>
               Post Rank
           </a>
           <!-- end link -->

           <!-- link -->
           <a href="" class="mb-3 capitalize font-medium text-sm hover:text-teal-600 transition ease-in-out duration-500">
               <i class="fa fa-calendar text-xs mr-2"></i>
               Visits By Day
           </a>
           <!-- end link -->
       </div>
       <!-- end sidebar content -->

    </div>
    <!-- end sidbar -->

    <!-- strat content -->
    <div class="bg-gray-100 flex-1 p-6 md:mt-16">
        <div style="text-align: center; display: flex; flex-direction: column; align-items: center;">
            <img class="object-cover" src="/img/index.png" style="width: 20%;">
            <h1 class="h2" style="font-size: 1.7rem; margin-top: 30px;">아직 로그인 하지 않았어요!</h1>
            {{#timeout}}
                <p style="color: #f56565; font-size: 1rem; font-weight: bold; margin-top: 10px;">로그인 시간 초과 다시 로그인해주세요</p>
            {{/timeout}}
            {{#logout}}
                <p style="color: #f56565; font-size: 1rem; font-weight: bold; margin-top: 10px;">로그아웃된 사용자 다시 로그인해주세요</p>
            {{/logout}}
            <a href="/login" class="btn-shadow mt-6" style="width: 400px; height: 50px; font-size: larger; font-weight: bold;">로그인</a>
        </div>

    </div>
    <!-- end content -->

</div>
<!-- end wrapper -->

{{>layout/footer}}